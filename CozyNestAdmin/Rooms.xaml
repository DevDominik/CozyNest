<Page x:Class="CozyNestAdmin.Rooms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CozyNestAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rooms">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar for adding/editing room information -->
        <StackPanel Grid.Column="0" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock Text="Room Information" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>
            <TextBlock Text="Room Name:"/>
            <TextBox Name="RoomNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Room Type:"/>
            <ComboBox Name="RoomTypeComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Basic"/>
                <ComboBoxItem Content="Deluxe"/>
                <ComboBoxItem Content="Suite"/>
            </ComboBox>

            <TextBlock Text="Price per Night:"/>
            <TextBox Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Capacity (Description):"/>
            <TextBox Name="CapacityTextBox" Margin="0,0,0,20"/>

            <!-- Buttons to confirm, add, or cancel -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                <Button Name="ConfirmButton" Click="ConfirmEdit_Click" Content="Confirm Edit" Width="100" Margin="5" IsEnabled="False"/>
                <Button Name="AddButton" Content="Add Room" Width="100" Margin="5" Click="AddButton_Click"/>
                <Button Name="SaveButton" Content="Save Room" Width="100" Margin="5" IsEnabled="False"/>
                <Button Name="CancelButton" Content="Cancel" Width="100" Margin="5" IsEnabled="False" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Display list of rooms -->
        <ScrollViewer Grid.Column="1" Margin="20">
            <WrapPanel Name="RoomsWrapPanel" HorizontalAlignment="Left" VerticalAlignment="Top" ItemWidth="450" ItemHeight="250">
                <!-- Room cards will be dynamically added here -->
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
