<Window x:Class="CozyNestAdmin.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CozyNestAdmin"
        mc:Ignorable="d" 
        Title="Auth"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="550" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="30,8,8,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <TextBlock x:Name="UserIcon" 
                                           FontFamily="MaterialDesignIcons" 
                                           Text="&#xf2c6;" 
                                           FontSize="18" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="8,0,0,0"
                                           Foreground="Gray"/>
                                <ScrollViewer x:Name="PART_ContentHost" Foreground="Black"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" BorderBrush="Black" BorderThickness="2">
        <Grid>
            <Grid Background="#007ACC" Height="40" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <Label Content="Auth" Foreground="White" FontSize="16" 
                       VerticalAlignment="Center" Padding="10,0,0,0"
                       MouseLeftButtonDown="Window_MouseLeftButtonDown"/>

                <Button Grid.Column="1" Content="━"
                        FontSize="18" Foreground="White"
                        Background="Transparent" BorderThickness="0"
                        ToolTip="Minimize"
                        Click="MinimizeWindow"/>

                <Button Grid.Column="2" Content="✖"
                        FontSize="18" Foreground="White"
                        Background="Transparent" BorderThickness="0"
                        ToolTip="Close"
                        Click="CloseWindow"/>
            </Grid>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label>Felhasználónév</Label>
                <TextBox x:Name="tbUsername"
                         Width="250" Height="40"
                         FontSize="18"
                         Margin="8"
                         BorderThickness="2"
                         BorderBrush="#007ACC"
                         Background="White"
                         Foreground="Black"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Style="{StaticResource RoundedTextBox}" FontFamily="Bahnschrift Light"/>

                <Label>Jelszó</Label>
                <TextBox x:Name="tbPassword"
                         Width="250" Height="40"
                         FontSize="18"
                         Margin="8"
                         BorderThickness="2"
                         BorderBrush="#007ACC"
                         Background="White"
                         Foreground="Black"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Style="{StaticResource RoundedTextBox}" FontFamily="Bahnschrift Light">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <TextBlock x:Name="KeyIcon" 
                                               FontFamily="MaterialDesignIcons" 
                                               Text="&#xf2db;" 
                                               FontSize="18" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="8,0,0,0"
                                               Foreground="Gray"/>
                                    <ScrollViewer x:Name="PART_ContentHost" Foreground="Black"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <Label Height="40px" x:Name="lbResponse"></Label>

                <Button Content="Bejelentkezés"
                        Width="250px" Height="40"
                        Background="#007ACC"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="2"
                        BorderBrush="White"
                        Padding="8"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource RoundedButton}" Click="Button_Click"/>
                <CheckBox x:Name="cbSaveLogin" FontSize="14" Width="240px" Margin="10px" Content="Save login" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
