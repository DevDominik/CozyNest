<Page x:Class="CozyNestAdmin.Misc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CozyNestAdmin"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Egyéb beállítások">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Foglaláskezelés -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Foglalások kezelése" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <ListBox Name="ReservationsListBox" Height="250" Margin="0,0,0,10"/>
            <Button Content="Kijelölt foglalás törlése" Click="DeleteReservation_Click" Width="160"/>
        </StackPanel>

        <!-- Szolgáltatások kezelése -->
        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Szolgáltatások kezelése" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Elérhető szolgáltatások:"/>
            <ListBox Name="ServicesListBox" Height="100" Margin="0,0,0,10" SelectionChanged="ServicesListBox_SelectionChanged"/>

            <TextBlock Text="Szolgáltatás neve:"/>
            <TextBox Name="ServiceNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Leírás:"/>
            <TextBox Name="ServiceDescriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Ár:"/>
            <TextBox Name="ServicePriceTextBox" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Mentés" Width="100" Click="SaveService_Click"/>
                <Button Content="Módosítás" Width="100" Click="ModifyService_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
